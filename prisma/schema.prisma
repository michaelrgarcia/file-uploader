generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  folders  Folder[]
}

model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  creator   User?    @relation(fields: [creatorId], references: [id])
  creatorId Int?
  files     String[] // array of file URLs
}
